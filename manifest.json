{
  "manifest_version": 2,
  "name": "IdiomReplaceX",
  "version": "1.0",
  "description": "Adds a button to the browser toolbar, which allows starting IdiomReplaceX on almost any web page.",
  "content_security_policy": "script-src 'self' https://idiomreplacex.de; object-src 'self'",
  "permissions": [
    "*://idiomreplacex.de/*",
    "activeTab"
  ],
  "browser_action": {
    "default_icon": "icons/irx-logo-48.png",
    "default_title": "IdiomReplaceX"
  },
  "icons": {
    "48": "icons/irx-logo-48.png"
  },
  "background": {
    "scripts": [
      "js/background-script.js"
    ]
  }
}

